.home(data-background="#ff3c3c" data-color="#F9F1E7")
  //- .home__pitch
  //-   h1 Lorem ipsum ipsum
  .home__wrapper
    .home__wrapper__inner
      .home__split.home__titles
        each domain, index in domains
          .home__titles__text__pair
            //- .home__titles__text.home__titles__label
            //-   .home__titles__label__text=`${home.data.collection} ${Numbers(index)}`
            .home__titles__text.home__titles__title
              h2.home__titles__title__text=domain.data.domain_title

      .home__split.home__gallery
        each rows in [0, 1]
          each media, index in home.data.gallery
            figure.home__gallery__media(class=`home__gallery__media--${index % 5 + 1}`)
              img.home__gallery__media__image(alt=media.image.alt data-src=media.image.url)

