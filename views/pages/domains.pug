.domains(data-background="#050505" data-color="#F9F1E7")
  .domains__wrapper
    .domains__titles(style="visibility:hidden;")
      each line in [0, 1, 2]
        .domains__titles__wrapper
          each domain, index in domains
            .domains__titles__item
              .domains__titles__label
                .home__titles__label__text!=`${home.data.domain}<br>${Numbers(index)}`

              .domains__titles__title
                .domains__titles__title__text=domain.data.domain_title

    .domains__gallery
      .domains__gallery__wrapper
        each domain, index in domains
          each project in domain.data.projects
            a.domains__gallery__link(data-index=index href=Link(project.domain_project))
              figure.domains__gallery__media(data-index=index)
                img.domains__gallery__media__image(
                  alt=project.domain_project.data.project_main_image.alt
                  data-src=project.domain_project.data.project_main_image.url
                  data-model-src=project.domain_project.data.project_main_image.url
                )

    .domains__content
      each domain, index in domains
        article.domains__article(class=`${index === 0 ? 'domains__article--active' : ''}`)
          h2.domains__article__title
            span.domains__article__title__text=`${domain.data.domain_title}`

          p.domains__article__description=domain.data.domain_short

    .domains__mobile
      each domain, index in domains
        .domains__mobile__item
          //- .domains__mobile__item__label!=`${home.data.domain}<br>${Numbers(index)}`
          .domains__mobile__item__title=domain.data.domain_title

  each project in domainProjects
    article.detail(data-background="#040404" data-color="#F9F1E7")
      .detail__wrapper
        figure.detail__media
          img.detail__media__image(alt=project.data.project_main_image.alt data-src=project.data.project_main_image.url)

        .detail__information
          p.detail__information__domain
            span.detail__information__domain__text!=project.data.domain.domain_title

          h1.detail__information__title!=project.data.title

          .detail__information__content
            .detail__information__hightlights
              each highlight in project.data.highlights
                p.detail__information__highlight
                  span.detail__information__highlight__text!=highlight.highlights_text.replace(/\n/, '<br>')
                  
                  if highlight.highlights_icon.toLowerCase() == 'arrow'
                    svg.detail__information__highlight__icon.detail__information__highlight__icon--arrow(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                      path(stroke="#fff" d="M14.84,25.46l11.31-11.31")
                      path(fill="#fff" d="M30.75,9.55l-0.66,2.36l-0.05,2.59l-1.93-2.31l-2.31-1.93l2.59-0.05L30.75,9.55z")
                      path(fill="#fff" d="M10.25,30.05l0.66-2.36l0.05-2.59l1.93,2.31l2.31,1.93l-2.59,0.05L10.25,30.05z")
                      path(fill="none" stroke="#fff" d="M20,0.5c10.77,0,19.5,8.73,19.5,19.5S30.77,39.5,20,39.5S0.5,30.77,0.5,20S9.23,0.5,20,0.5z")
                  else
                    svg.detail__information__highlight__icon.detail__information__highlight__icon--star(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40")
                      path(fill="#fff" d="M24.26,9.87l-2.76,8.6l8.72-2.63l-8.16,4.13l8.15,4.26l-8.71-2.82l2.82,8.91l-4.26-8.34l-4.14,8.15l2.63-8.72 l-8.6,2.75l8.15-4.2l-8.34-4.33l8.78,2.82l-2.82-8.78l4.33,8.34L24.26,9.87z")
                      path(fill="none" stroke="#fff" d="M20,0.5c10.77,0,19.5,8.73,19.5,19.5S30.77,39.5,20,39.5S0.5,30.77,0.5,20S9.23,0.5,20,0.5z")

            .detail__information__list
              each item in project.data.informations
                p.detail__information__item
                  strong.detail__information__item__title
                    //- span.detail__information__item__title__text=item.informations_label

                  span.detail__information__item__description=item.informations_description


            footer.detail__information__footer
              a.detail__information__link(data-animation="link" href=project.data.link_url.url target="_blank")
                span=project.data.link_text

          button.detail__button(data-animation="button")
            span.detail__button__text Close

            svg.detail__button__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 40")
              g(stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
                path(fill="none" stroke="#fff" d="M20 5L5 20L20 35")
                path(fill="none" stroke="#fff" d="M5 20H73")

